<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_75"
    android:background="@drawable/shape_album_item_bg"
    android:orientation="vertical">

    <com.lhz.sk.himalaya.views.RoundRectImageView
        android:id="@+id/album_cover"
        android:layout_width="@dimen/dp_68"
        android:layout_height="@dimen/dp_65"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_5"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toRightOf="@id/album_cover"
        android:orientation="vertical">

        <com.lhz.sk.himalaya.views.RollTextView
            android:id="@+id/album_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textSize="@dimen/sp_18">

        </com.lhz.sk.himalaya.views.RollTextView>

        <com.lhz.sk.himalaya.views.RollTextView
            android:id="@+id/album_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="#ff848484"
            android:textSize="@dimen/sp_12">

        </com.lhz.sk.himalaya.views.RollTextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/album_play_count"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_10"
                android:ellipsize="end"
                android:lines="1"
                android:text="25w"
                android:textColor="#ff848484"
                android:textSize="@dimen/sp_7">

            </TextView>

            <TextView
                android:id="@+id/album_count_size"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_10"
                android:ellipsize="end"
                android:lines="1"
                android:text="15"
                android:textColor="#ff848484"
                android:textSize="@dimen/sp_7">

            </TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>