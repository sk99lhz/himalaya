<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/dp_230"
        android:layout_height="@dimen/dp_140"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_comfirm_dialog_bg">

        <TextView
            android:id="@+id/dialog_text"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="删除当前历史记录吗"
            android:textSize="@dimen/sp_20" />

        <CheckBox
            android:id="@+id/dialog_checkbox"
            android:layout_below="@+id/dialog_text"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:text="清除所有历史记录"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/dialog_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textSize="@dimen/sp_18" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="@color/main_color_two" />

            <TextView
                android:id="@+id/give_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/main_color"
                android:layout_weight="1"
                android:text="确定"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/dialog_container"
            android:background="@color/main_color_two" />
    </RelativeLayout>
</RelativeLayout>